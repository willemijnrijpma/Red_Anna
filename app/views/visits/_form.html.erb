<%= form_for @visit do |f| %>
    <pre><%= @visit.errors.to_json %></pre>
    <%= f.label :threat %>
    <%= f.select :threat, [['Yes', true], ['No', false]] %>

    <%= f.label :advice %>
    <%= f.select :advice, [['Yes', true], ['No', false]] %>

    <%= f.label :hr %>
    <%= f.select :hr_id, Hr.select_options %>

    <%= f.submit (@visit.new_record? ? "Create" : "Update") %>

<% end %>

<div class="container">

	<h2>Was there any threat?</h2>

  <ul>
  <li>
    <input type="radio" id="f-option" name="selector">
    <label for="f-option">Yes</label>

    <div class="check"></div>
  </li>

  <li>
    <input type="radio" id="s-option" name="selector">
    <label for="s-option">No</label>

    <div class="check"><div class="inside"></div></div>
  </li>


</ul>
</div>
